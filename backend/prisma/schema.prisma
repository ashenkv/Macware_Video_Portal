
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// User model for students and teachers
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("student")
  courses   Course[] @relation("CourseTeacher")  // Teacher: courses they teach
  enrolledCourses Course[] @relation("CourseStudents") // Student: courses they're enrolled in
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Video {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  videoUrl    String
  duration    String?
  courseId    Int
  course      Course   @relation(fields: [courseId], references: [id])
  createdAt   DateTime @default(now())
}

model Course {
  id        Int      @id @default(autoincrement())
  title     String
  teacherId Int
  teacher   User     @relation("CourseTeacher", fields: [teacherId], references: [id])
  students  User[]   @relation("CourseStudents")
  videos    Video[]
}